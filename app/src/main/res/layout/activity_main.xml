<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shirashyad.golfstroketracker.ui.MainActivity">

    <Button
        android:id="@+id/addCourseBtn"
        android:layout_width="247dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:text="Add Course"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statisticsBtn" />

    <Button
        android:id="@+id/statisticsBtn"
        android:layout_width="247dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:text="Statistics"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scorecardsBtn" />

    <Button
        android:id="@+id/playGolfBtn"
        android:layout_width="247dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:text="Play Golf"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scorecardsBtn"
        android:layout_width="247dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:text="Scorecards"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playGolfBtn" />
</android.support.constraint.ConstraintLayout>
